@page "/mascotas"

<PageTitle>Mascotas</PageTitle>

@using PetServiceBlazor.Data.Models
@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient http

@* boton para crear un formulario *@
<div class="title">
    <div class="title__content">
        <h1>Libros</h1>
    </div>
    <div class="title__btn">
        <a href="/mascotas/add" class="btn btn-success">
            <i class="oi oi-plus"></i>
             &nbsp 
            Agregar
        </a>
    </div>
</div>

<p>Se enlistan las mascotas en relación con los dueños.</p>


@if (mascotas == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Sexo</th>
                <th>FechaNacimiento</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mascota in mascotas)
            {
                <tr>
                    <td>@mascota.Nombre</td>
                    <td>@mascota.Sexo</td>
                    <td>@mascota.FechaNacimiento.ToShortDateString()</td>
                    <td>
                        <span class="icon">
                            <a href="/mascotas/update/@mascota.IdMascota" class="oi oi-pencil" title="Editar"></a>
                        </span>
                         &nbsp 
                        <span class="icon">
                            <a href="/mascotas/delete/@mascota.IdMascota"class="oi oi-trash" title="Borrar"></a>
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private readonly string api = "api/Mascotas";
    private IList<Mascota>? mascotas;

    protected override async Task OnInitializedAsync()
    {
        mascotas = await http.GetFromJsonAsync<IList<Mascota>>(api);
    }

}
