@page "/mascotas"

<PageTitle>Mascotas</PageTitle>

@using PetServiceBlazor.Data.Models
@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient http
@inherits LayoutComponentBase


<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">PetService</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="mascotas">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Mascotas
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="usuarios">
                <span class="oi oi-people" aria-hidden="true"></span> Mi información
            </NavLink>
        </div>
    </nav>
</div>
@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

<div class="title">
    <div class="title_content">
        <h1>Mascotas</h1>
    </div>
    <div class="title_btn">
        <a href="/mascotas/add" class="btn btn-success">
            <i class="oi oi-plus"></i>
            Añadir
        </a>
    </div>
</div>

<p>This component demonstrates fetching data from a service.</p>

@if (mascotas == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Sexo</th>
                <th>Fecha de Nacimiento</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mascota in mascotas)
            {
                <tr>
                    <td>@mascota.Nombre</td>
                    <td>@mascota.Sexo</td>
                    <td>@mascota.FechaNacimiento</td>
                    <td>
                        <span class="icon">
                            <a href="/mascotas/update/@mascota.IdMascota" class="oi oi-pencil" title="Editar"></a>
                        </span>
                        <span class="icon">
                            <a href="/mascotas/delete/@mascota.IdMascota" class="oi oi-trash" title="Borrar"></a>
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private readonly string api = "api/Mascotas";
    private IList<Mascota>? mascotas;

    protected override async Task OnInitializedAsync()
    {
        mascotas = await http.GetFromJsonAsync<IList<Mascota>>(api);
    }
}
