@using PetServiceBlazor.Data.Models
@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient http
@inject NavigationManager NavigationManager

@code {
    public int id { get; set; }
    public bool isUpdate { get; set; } = false;

    bool loading = true;

    IList<Mascotas>? mascotas;

    Mascotas mascota = new Mascotas();

    protected override async Task OnInitializedAsync()
    {
        mascotas = await http.GetFromJsonAsync<IList<Mascotas>>("api/Mascota");
        isUpdate = id != 0;
        if (isUpdate)
        {
            var response = await http.GetFromJsonAsync<Mascotas>($"api/Mascota/{id}");
            if(response != null)
            {
                mascota = response;
            }
        }
        loading = false;
    }                   
    protected async Task Save()
    {
        HttpResponseMessage? response;
        if (isUpdate)
        {
            response = await http.PutAsJsonAsync<Mascotas>($"api/Mascota/{id}", mascota!);
        }
        else
        {
            response = await http.PostAsJsonAsync<Mascotas>($"api/Mascota", mascota!);
        }
        Mascotas? saved = response.Content.ReadFromJsonAsync<Mascotas>().Result;
        NavigationManager.NavigateTo("/mascotas");
    }
}
